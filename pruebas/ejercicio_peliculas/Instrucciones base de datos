CREATE SCHEMA db_peliculas; -- Creada la base de datos llamada peliculas

USE db_peliculas; -- Declaramos que trabajamos en la bbdd mencionada

CREATE TABLE peliculas (
id_pelicula NUMERIC(8) PRIMARY KEY NOT NULL,
titulo VARCHAR(80) NOT NULL,
fecha_estreno DATE CHECK (fecha_estreno >= '1895-01-01'),-- La fecha debe ir entre comilla simple, formato AAAA/MM/DD
edad_recomendada NUMERIC CHECK (edad_recomendada IN (0, 3, 7, 12, 16, 18))
);
